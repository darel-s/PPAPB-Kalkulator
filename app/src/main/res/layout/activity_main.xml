<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/primaryCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/calculatorButton"
        android:layout_marginBottom="28dp"
        android:textAlignment="textEnd"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/secondaryCalc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/primaryCalc"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/calculatorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="78dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="C"/>

            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="%"/>

            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="รท"/>

            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputDelete"
                android:text="Del"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="7"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="8"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="9"/>
            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="4"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="5"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="6"/>
            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="1"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="2"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="3"/>
            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="0"/>
            <Button
                style="@style/buttonNumber"
                android:layout_weight="1"
                android:onClick="inputNumber"
                android:text="."/>
            <Button
                style="@style/nonButtonNumber"
                android:layout_weight="1"
                android:onClick="inputOperator"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>